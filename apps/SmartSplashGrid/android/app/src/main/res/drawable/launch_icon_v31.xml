<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Using item with drawable directly allows scaling. 
         Adding 36dp padding to ensure the square logo fits INSIDE the Android 12 circle mask. -->
    <item
        android:drawable="@drawable/launch_logo"
        android:gravity="center"
        android:width="100dp"
        android:height="100dp"
        android:top="24dp"
        android:bottom="24dp"
        android:left="24dp"
        android:right="24dp" />
</layer-list>
